<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/DirectionBut"
        android:layout_width="104dp"
        android:layout_height="101dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="Ver diereccion"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toEndOf="@+id/LargoBox"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PesoBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="Paquete peso"
        app:layout_constraintStart_toEndOf="@+id/FechaPubBox"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AltoBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:text="Paquete alto"
        app:layout_constraintEnd_toStartOf="@+id/AcceptBut"
        app:layout_constraintStart_toEndOf="@+id/PesoBox"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FechaPubBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="FechaPublicacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/LargoBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="24dp"
        android:text="Paquete Largo"
        app:layout_constraintStart_toEndOf="@+id/AnchoBox"
        app:layout_constraintTop_toBottomOf="@+id/PesoBox" />

    <Button
        android:id="@+id/AcceptBut"
        android:layout_width="368dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="148dp"
        android:text="Acceptar"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AnchoBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="Paquete ancho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FechaPubBox" />

</androidx.constraintlayout.widget.ConstraintLayout>